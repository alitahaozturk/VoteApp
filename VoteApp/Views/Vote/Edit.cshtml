@model VoteApp.Models.Vote

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Vote</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.VoteId)

        <div class="form-group">
            @Html.LabelFor(model => model.Temp, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Temp)
                @Html.ValidationMessageFor(model => model.Temp)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OptionId, "OptionId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("OptionId", String.Empty)
                @Html.ValidationMessageFor(model => model.OptionId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VoteDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VoteDate)
                @Html.ValidationMessageFor(model => model.VoteDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsValid, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IsValid)
                @Html.ValidationMessageFor(model => model.IsValid)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
